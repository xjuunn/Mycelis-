{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist/esm",
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
