{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "ESNExt",
    "outDir": "dist/esm",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}